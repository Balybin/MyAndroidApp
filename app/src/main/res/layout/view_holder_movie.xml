<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginTop="30dp"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/navigation_icon"
    app:strokeColor="#803B3B4D"
    app:strokeWidth="1dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/poster"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/movie_name">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/movie_avatar"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/movie_poster"
            app:shapeAppearanceOverlay="@style/circledCornersImageView" />


        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gradient"
            app:shapeAppearanceOverlay="@style/circledCornersImageView" />
    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/min_age"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="12dp"
        app:cardBackgroundColor="@color/backgroundColor"
        app:cardCornerRadius="5dp"
        app:layout_constraintStart_toStartOf="@id/poster"
        app:layout_constraintTop_toTopOf="@id/poster">

        <TextView
            android:id="@+id/min_age_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/roboto_bold"
            tools:text="13+"
            android:textColor="@color/textColorWhite"
            android:textSize="12sp" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/like"
        android:layout_width="16dp"
        android:layout_height="14dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="6dp"
        android:src="@drawable/ic_like"
        app:layout_constraintEnd_toEndOf="@id/poster"
        app:layout_constraintTop_toTopOf="@id/poster" />

    <TextView
        android:id="@+id/movie_genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/roboto_thin"
        android:text="@string/string_movie_genres"
        android:textColor="@color/textColorRed"
        android:textSize="8sp"
        app:layout_constraintBottom_toTopOf="@id/rating_bar"
        app:layout_constraintStart_toStartOf="@id/rating_bar" />

    <com.idlestar.ratingstar.RatingStarView
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@id/poster"
        app:layout_constraintEnd_toStartOf="@id/number_of_reviews"
        app:layout_constraintStart_toStartOf="@id/poster"
        app:rsv_rating="3"
        app:rsv_starMargin="2dp"
        app:rsv_starNum="5" />

    <TextView
        android:id="@+id/number_of_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/string_number_of_reviews"
        android:textColor="@color/textColorGray"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/rating_bar"
        app:layout_constraintStart_toEndOf="@id/rating_bar"
        app:layout_constraintTop_toBottomOf="@id/poster"
        app:layout_constraintTop_toTopOf="@id/rating_bar" />

    <TextView
        android:id="@+id/movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_bold"
        tools:text="Avengers: End Game"
        android:textColor="@color/textColorWhite"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/poster"
        app:layout_constraintBottom_toTopOf="@id/movie_duration"/>

    <TextView
        android:id="@+id/movie_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:paddingBottom="8dp"
        tools:text="137 MIN"
        android:textColor="@color/textColorGray"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@id/movie_name"
        app:layout_constraintTop_toBottomOf="@id/movie_name"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
